@model MvcApplication.Models.Claim

@{
    ViewData["Title"] = "Create Claim";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.Errors != null)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var err in ViewBag.Errors as List<string>)
            {
                <li>@err</li>
            }
        </ul>
    </div>
}

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="PolicyNumber" class="form-label"></label>
        <input asp-for="PolicyNumber" class="form-control" />
        <span asp-validation-for="PolicyNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ClaimType" class="form-label"></label>
        <select asp-for="ClaimType" class="form-select" asp-items="@(new SelectList(ViewBag.ClaimTypes))">
            <option value="">-- Select Claim Type --</option>
        </select>
        <span asp-validation-for="ClaimType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ClaimAmount" class="form-label"></label>
        <input asp-for="ClaimAmount" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="ClaimAmount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select" asp-items="@(new SelectList(ViewBag.Statuses))">
            <option value="">-- Select Status --</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <!-- Add AgentId input here -->
    <div class="mb-3">
        <label asp-for="AgentId" class="form-label"></label>
        <input asp-for="AgentId" class="form-control" />
        <span asp-validation-for="AgentId" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
