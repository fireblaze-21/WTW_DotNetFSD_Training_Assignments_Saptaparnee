@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4">Admin Dashboard</h2>

<div class="row text-center">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5>Total Claims</h5>
                <h3>@ViewBag.TotalClaims</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5>Approved</h5>
                <h3>@ViewBag.Approved</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body">
                <h5>Rejected</h5>
                <h3>@ViewBag.Rejected</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-warning text-dark">
            <div class="card-body">
                <h5>Pending</h5>
                <h3>@ViewBag.Pending</h3>
            </div>
        </div>
    </div>
</div>

<br />

<div class="text-end">
    <a asp-controller="Claim" asp-action="Index" class="btn btn-outline-secondary">Manage Claims</a>
</div>

