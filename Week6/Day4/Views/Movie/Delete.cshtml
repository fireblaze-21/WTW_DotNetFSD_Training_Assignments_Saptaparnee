@model Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<h2>Delete Movie</h2>

<h4>Are you sure you want to delete this movie?</h4>

<div>
    <h5>@Model.Title (@Model.ReleaseYear)</h5>
    <p><strong>Genre:</strong> @Model.Genre</p>
    <p><strong>Director:</strong> @Model.Director</p>
    <p><strong>Rating:</strong> @Model.Rating</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
