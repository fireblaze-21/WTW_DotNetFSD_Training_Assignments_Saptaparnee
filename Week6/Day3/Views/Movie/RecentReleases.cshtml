
@model List<Movie>

@{
    ViewData["Title"] = "Recent Releases";
}

<h2>Recent Releases (Last 10 Years)</h2>
<p><a asp-action="Index">Back to Full List</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Release Year</th>
            <th>Director</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.ReleaseYear</td>
                <td>@movie.Director</td>
            </tr>
        }
    </tbody>
</table>