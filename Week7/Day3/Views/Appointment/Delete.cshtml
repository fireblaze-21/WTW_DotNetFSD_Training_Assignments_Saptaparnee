@model WebApplication7.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<h1>Delete Appointment</h1>

<h4>Are you sure you want to delete this appointment?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-3">Patient</dt>
        <dd class="col-sm-9">@Model.Patient?.Name</dd>

        <dt class="col-sm-3">Doctor</dt>
        <dd class="col-sm-9">@Model.Doctor?.Name</dd>

        <dt class="col-sm-3">Appointment Date & Time</dt>
        <dd class="col-sm-9">@Model.AppointmentDateTime.ToString("f")</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>