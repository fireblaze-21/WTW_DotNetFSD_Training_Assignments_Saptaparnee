@model IEnumerable<MvcApplication.Models.Claim>

@{
    ViewData["Title"] = "Claims List";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">Create New Claim</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Claim ID</th>
            <th>Policy Number</th>
            <th>Claim Type</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.PolicyNumber</td>
                <td>@claim.ClaimType</td>
                <td>@claim.Description</td>
                <td>@claim.ClaimAmount.ToString("C")</td>
                <td>@claim.Status</td>
                <td>@claim.CreatedAt.ToLocalTime().ToString("g")</td>
                <td>@claim.UpdatedAt.ToLocalTime().ToString("g")</td>
                <td>
                    <a class="btn btn-sm btn-info" href="@Url.Action("Details", new { id = claim.ClaimId })">Details</a>
                    <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", new { id = claim.ClaimId })">Edit</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = claim.ClaimId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
