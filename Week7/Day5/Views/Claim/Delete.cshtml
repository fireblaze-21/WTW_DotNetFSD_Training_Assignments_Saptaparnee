@model MvcApplication.Models.Claim

@{
    ViewData["Title"] = "Delete Claim";
}

<h2>@ViewData["Title"]</h2>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@if (Model == null)
{
    <div class="alert alert-warning">Claim not found.</div>
}
else
{
    <p>Are you sure you want to delete this claim?</p>

    <dl class="row">
        <dt class="col-sm-3">Claim ID</dt>
        <dd class="col-sm-9">@Model.ClaimId</dd>

        <dt class="col-sm-3">Policy Number</dt>
        <dd class="col-sm-9">@Model.PolicyNumber</dd>

        <dt class="col-sm-3">Claim Type</dt>
        <dd class="col-sm-9">@Model.ClaimType</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Claim Amount</dt>
        <dd class="col-sm-9">@Model.ClaimAmount.ToString("C")</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ClaimId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
}
