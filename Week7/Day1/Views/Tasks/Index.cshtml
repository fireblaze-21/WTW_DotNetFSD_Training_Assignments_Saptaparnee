@model List<WebApplication8.Models.TaskItem>

@{
    ViewData["Title"] = "Task List";
}

<h1>Task List</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Task</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Priority</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td colspan="5" class="text-center">No tasks available.</td></tr>
        }
        else
        {
            foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                    <td>@task.DueDate.ToString("yyyy-MM-dd")</td>
                    <td>@task.Priority</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@task.Id">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@task.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

