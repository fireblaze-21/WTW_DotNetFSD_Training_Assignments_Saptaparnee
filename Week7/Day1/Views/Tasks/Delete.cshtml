@model WebApplication8.Models.TaskItem

@{
    ViewData["Title"] = "Delete Task";
}

<h1>Delete Task</h1>

<h3>Are you sure you want to delete this task?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Due Date</dt>
        <dd class="col-sm-10">@Model.DueDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Priority</dt>
        <dd class="col-sm-10">@Model.Priority</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>